<Window x:Class="showPDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:showPDF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Name="lable1" Margin="3,6,0,0" Content="Word Document :" VerticalAlignment="Top" Height="26"  />
        <TextBox  Name="tbSelectFile" VerticalAlignment="Top"  HorizontalAlignment="Stretch" Margin="110,10,300,0" Height="18"  />
        <Button HorizontalAlignment="Right" VerticalAlignment="Top"  
                Content="Select Doc" Name="btnSelectWord" Margin="0,10,202,0" 
                Click="OnBtn_SelectFile" Height="20" Width="81" />
        <Button HorizontalAlignment="Left" Margin="606,9,0,0" VerticalAlignment="Top" 
                Content="View Doc"  Name="btnViewDoc" 
                Click="OnBtn_View" 
                Height="20" Width="78" />
        <WebBrowser Name="dv" HorizontalAlignment="Left" Height="379" Grid.Row="1" VerticalAlignment="Top" Width="790"/>

    </Grid>
</Window>
